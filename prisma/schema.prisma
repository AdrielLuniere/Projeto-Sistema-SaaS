// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Tenant / Empresa
model Tenant {
  id          String   @id @default(uuid())
  name        String
  document    String   @unique // CNPJ/CPF
  email       String
  phone       String?
  logoUrl     String?
  brandColor  String?  @default("#000000")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  clients     Client[]
  boletos     Boleto[]
  apiKeys     ApiKey[]
}

// Usuário do Painel
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // Hashed
  role      String   @default("ADMIN") // ADMIN, USER
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Cliente Final (Pagador)
model Client {
  id        String   @id @default(uuid())
  name      String
  document  String   // CPF/CNPJ
  email     String?
  phone     String?
  address   String?
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  boletos   Boleto[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, document])
}

// Boleto Bancário
model Boleto {
  id            String    @id @default(uuid())
  amount        Float
  dueDate       DateTime
  issueDate     DateTime  @default(now())
  status        String    @default("PENDING") // PENDING, PAID, OVERDUE, CANCELLED
  description   String?
  ourNumber     String?   // Nosso Número
  barcode       String?
  digitableLine String?
  pdfUrl        String?
  
  tenantId      String
  tenant        Tenant    @relation(fields: [tenantId], references: [id])
  clientId      String
  client        Client    @relation(fields: [clientId], references: [id])
  
  notifications Notification[]
  logs          Log[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Histórico de Envios
model Notification {
  id        String   @id @default(uuid())
  type      String   // EMAIL, WHATSAPP, SMS
  status    String   // PENDING, SENT, FAILED
  sentAt    DateTime?
  boletoId  String
  boleto    Boleto   @relation(fields: [boletoId], references: [id])
  createdAt DateTime @default(now())
}

// Logs de Auditoria
model Log {
  id        String   @id @default(uuid())
  action    String
  details   String?
  userId    String?
  boletoId  String?
  boleto    Boleto?  @relation(fields: [boletoId], references: [id])
  createdAt DateTime @default(now())
}

// API Keys para integração
model ApiKey {
  id        String   @id @default(uuid())
  key       String   @unique
  name      String?
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}
